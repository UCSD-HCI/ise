        <GroupBox Header="System Information">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label>FPS</Label>
                <Label Name="fpsLabel" Grid.Column="1"></Label>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>

