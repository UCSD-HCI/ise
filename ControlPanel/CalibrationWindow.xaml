<Window x:Class="ControlPanel.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:ControlPanel"
        Title="CalibrationWindow" Height="486" Width="763" WindowState="Maximized" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <my:ZoomableVideoUserControl x:Name="rgbVideo" Grid.Row="0" Grid.Column="0"/>
        <my:ZoomableVideoUserControl x:Name="depthVideo" Grid.Row="0" Grid.Column="1"/>
        <my:ZoomableVideoUserControl x:Name="motionVideo" Grid.Row="1" Grid.Column="0"/>
        
        <Grid Grid.Row="1" Grid.Column="1">
            
        </Grid>
    </Grid>
</Window>
