<UserControl x:Class="RiskSpace.GameMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="750" IsHitTestVisible="False">
    <Grid>
        <TextBlock VerticalAlignment="Center" Name="msgTextBlock" FontSize="48" TextAlignment="Center" Foreground="DarkRed" FontFamily="Comic Sans MS">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="White" />
            </TextBlock.Effect>
            <TextBlock.RenderTransform>
                <TranslateTransform x:Name="textMotionTrans" X="0" Y="0"/>
            </TextBlock.RenderTransform>
            Message
        </TextBlock>
    </Grid>
</UserControl>
