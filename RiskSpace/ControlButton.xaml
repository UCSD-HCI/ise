<UserControl x:Class="RiskSpace.ControlButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mt="http://schemas.multitouch.com/Multitouch/2008/04"
             mc:Ignorable="d" Width="100">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Image Name="okButton" Source="Images/finish.png" Margin="0,20,0,20" mt:MultitouchScreen.ContactRemoved="okButton_ContactRemoved" Visibility="Collapsed" IsEnabled="False"/>
            <Image Name="cancelButton" Source="Images/cancel.png" Margin="0,20,0,20" mt:MultitouchScreen.ContactRemoved="cancelButton_ContactRemoved" Visibility="Collapsed" IsEnabled="False"/>
            <Image Name="nextButton" Source="Images/next.png" Margin="0,20,0,20" mt:MultitouchScreen.ContactRemoved="nextButton_ContactRemoved" Visibility="Collapsed" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>
